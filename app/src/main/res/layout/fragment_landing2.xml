<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".landingpage.FragmentLanding2">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_fragment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"/>
    <ImageView
        android:id="@+id/iv_frag2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/gl_fragment2"
        android:src="@drawable/ic_landing_page2"
        app:layout_constraintBottom_toBottomOf="@id/gl_fragment2"
        android:contentDescription="TODO" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/iv_frag2"
        android:layout_width="256dp"
        android:text="Bermain suit melawan komputer"
        android:textSize="16sp"
        android:gravity="center"
        android:fontFamily="@font/comic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>