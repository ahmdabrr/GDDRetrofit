<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/bg_history_battle">

    <ImageView
        android:id="@+id/iv_delete_history"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <LinearLayout
        android:id="@+id/linearlayout_tanggal"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_tanggal"
            android:textColor="#2196F3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal   : "/>

        <TextView
            android:id="@+id/tv_tanggalSekarang"
            android:textColor="#4E5357"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05 Agustus 2020"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_hasil"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/linearlayout_tanggal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/tv_hasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2196F3"
            android:text="Hasil        : "/>

        <TextView
            android:id="@+id/tv_hasilKeterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4E5357"
            android:text="Ervien Menang"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
